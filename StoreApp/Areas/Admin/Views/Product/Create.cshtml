@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control
            @(ViewData.ModelState["ProductName"]?.Errors.Any() == true ? "is-invalid" : "")" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <textarea asp-for="Summary" class="form-control
            @(ViewData.ModelState["Summary"]?.Errors.Any() == true ? "is-invalid" : "")"></textarea>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group my-3">
                <label asp-for="Price"></label>
                <div class="input-group">
                    <span class="input-group-text">₺</span>
                    <input asp-for="Price" class="form-control
            @(ViewData.ModelState["Price"]?.Errors.Any() == true ? "is-invalid" : "")" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group my-3">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control form-select">
                </select>
            </div>
        </div>
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control
            @(ViewData.ModelState["file"]?.Errors.Any() == true ? "is-invalid" : "")" />
        <span class="text-danger">
            @ViewData.ModelState["file"]?.Errors?.FirstOrDefault()?.ErrorMessage
        </span>
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-floppy-disk"></i>
                Save
            </button>
            <button asp-action="Index" class="btn btn-outline-primary">
                <i class="fa-solid fa-list"></i>
                Products
            </button>
        </div>
    </div>
</form>