@model Product

<div class="text-center">
    <div class="display-6">Delete</div>
</div>

<form asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="my-3">
        <p class="h5">Do you want to remove this product?</p>
    </div>

    <div class="form-group my-3">
        <label class="form-label"><strong>Product Name:</strong> @Model.ProductName</label>
    </div>

    <div class="form-group my-3">
        <label class="form-label"><strong>Price:</strong> @Model.Price</label>
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-trash"></i>
                Delete
            </button>
            <button asp-action="Index" class="btn btn-outline-primary">
                <i class="fa-solid fa-list"></i>
                Products
            </button>
        </div>
    </div>
</form>
