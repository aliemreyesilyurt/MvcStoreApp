@model Order
@{
    var total = @Model.Lines.Sum(c => c.Product.Price * c.Quantity);
}

<div class="row shadow my-3">
    <div class="col-md-3 border-1 border-dark bg-light">
        <h5 class="display-5 text-center">
            <i class="fa-solid fa-bag-shopping"></i> <br />
            @Model?.Name
        </h5>
        <p>@Model?.Line1</p>
        <p>@Model?.Line2</p>
        <p>@Model?.Line3</p>
        <p>@Model?.City</p>
        <p class="rounded-2 py-3">
            <b>Shipped:</b>
            @if (Model.Shipped)
            {
                <span class="bg-success p-2 rounded text-white">Completed</span>
            }
            else
            {
                <span class="bg-warning p-2 rounded">In Progress</span>
            }
            
        </p>
    </div>
    <div class="col-md-9">
        <h6 class="display-6 mt-3 text-center">
            Cart
        </h6>
        <ul class="list-group">
            @foreach (var cartItem in Model?.Lines)
            {
                <li class="list-group-item d-flex justify-content-between brand">
                    @cartItem.Product.ProductName
                    <b>
                        @cartItem.Quantity * @cartItem.Product.Price.ToString("C2")
                        = @((cartItem.Quantity * cartItem.Product.Price).ToString("C2"))
                    </b>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between text-danger">
                Total
                <b>@total.ToString("C2")</b>
            </li>
        </ul>

        <div class="text-center mt-2 p-2">
            <form asp-action="Complete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success" disabled ="@Model?.Shipped">
                    Complete
                </button>
            </form>
        </div>
    </div>
</div>