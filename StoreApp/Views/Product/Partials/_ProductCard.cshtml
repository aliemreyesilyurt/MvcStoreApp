@model Product

<div class="col-12 col-sm-6 col-md-4 py-3">
    <div class="card">
        <!-- Üst kısımdaki ürün resmi -->
        <img src="@Model.ImageUrl" class="card-img-top" alt="Product Image">
        <div class="card-body">
            <!-- Kategori -->
            <p class="text-muted mb-1">@await Component.InvokeAsync("GetCategoryName", new { id = Model.CategoryId })</p>

            <!-- Ürün adı -->
            <h6 class="card-title font-weight-bold">@Model.ProductName</h6>

            <!-- Fiyat -->
            <div class="d-flex align-items-center mb-3">
                <span class="fw-bold text-secondary me-2">@Model.Price.ToString("C")</span>
            </div>

            <form id="@Model.Id" asp-page="/cart" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <div class="row">
                    <div class="col">
                        <a class="btn btn-outline-secondary btn-sm w-100" asp-controller="Product" asp-action="Get" asp-route-id="@Model.Id">
                            <i class="fa-solid fa-arrow-right"></i> Details
                        </a>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-success btn-sm w-100">
                            <i class="fa-solid fa-cart-plus"></i> Add
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>