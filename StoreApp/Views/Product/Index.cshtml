@model IQueryable<Product>

<div class="row">
    <div class="col-md-3">
        <div class="row my-3">
            @await Component.InvokeAsync("CategoriesMenu")
        </div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Product prd in Model)
            {
                <partial name="~/Views/Product/Partials/_ProductCard.cshtml" model="@prd" />
            }
        </div>
    </div>
</div>

@section Footer {
    <div>
        Only for Index Footer
    </div>
}