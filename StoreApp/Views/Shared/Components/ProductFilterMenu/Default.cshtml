<div class="my-3">
    <h6 class="lead">
        <i class="fa-solid fa-filter text-secondary"></i>
        Filters
    </h6>
</div>


<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />
        <div class="form-group my-2">
            <input class="form-control" name="SearchTerm" placeholder="Search" />
        </div>

        <div class="form-group my-2">
            <input class="form-control" name="MinPrice" placeholder="Min Price" />
        </div>

        <div class="form-group my-2">
            <input class="form-control" name="MaxPrice" placeholder="Max Price" />
        </div>

        <div class="btn-group">
            <div class="form-gorup my-2">
                <a class="btn btn-sm btn-outline-primary" asp-action="Index" asp-controller="Product">
                    <i class="fa-solid fa-eraser"></i>
                    Clear
                </a>
            </div>

            <div class="form-gorup m-2">
                <button type="submit" class="btn btn-sm btn-primary">Filter</button>
            </div>
        </div>
    </form>
</div>